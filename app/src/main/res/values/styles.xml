<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBackground</item>
        <item name="colorAccent">@color/colorControlGray</item>
        <item name="android:textColor">@color/contentText</item>
        <item name="android:textColorPrimary">@color/contentText</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>
        <item name="android:alertDialogStyle">@style/MyAlertDialog</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/buttonBackgroundTint</item>
    </style>

    <style name="DialogTheme" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyPopupMenu" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@color/menuBackground</item>
    </style>

    <style name="MyAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:popupBackground">@color/menuBackground</item>
    </style>

    <style name="DialogCardView" parent="CardView">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="cardBackgroundColor">@color/colorBackground</item>
    </style>

    <style name="FilePickerTheme" parent="LibAppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBackground</item>
        <item name="colorAccent">@color/colorControlGray</item>
    </style>

    <style name="metaButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:minWidth">50dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="metaToggleButton" parent="metaButton">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/toggle_text_color</item>
    </style>

</resources>
