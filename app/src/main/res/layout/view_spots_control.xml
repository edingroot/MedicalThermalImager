    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabAddSpot"
        android:layout_width="@dimen/fab_spots_control_size"
        android:layout_height="@dimen/fab_spots_control_size"
        android:layout_above="@id/fabRemoveSpot"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/fab_spots_margin"
        android:src="@drawable/ic_plus"
        android:visibility="invisible"
        app:backgroundTint="@color/colorAccent"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabRemoveSpot"
        android:layout_width="@dimen/fab_spots_control_size"
        android:layout_height="@dimen/fab_spots_control_size"
        android:layout_above="@id/fabSpotsControl"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/fab_spots_margin"
        android:src="@drawable/ic_minus"
        android:visibility="invisible"
        app:backgroundTint="#E040FB"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabSpotsControl"
        android:layout_width="@dimen/fab_spots_control_size"
        android:layout_height="@dimen/fab_spots_control_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/fab_spots_margin"
        android:src="@drawable/ic_target"
        app:backgroundTint="#2196F3"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"/>

</RelativeLayout>
